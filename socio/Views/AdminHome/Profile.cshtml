@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var profile = ViewData["Profile"];
    var username = profile?.GetType().GetProperty("Username")?.GetValue(profile, null) ?? "john_doe";
    var bio = profile?.GetType().GetProperty("Bio")?.GetValue(profile, null) ?? "";
    var postsCount = profile?.GetType().GetProperty("PostsCount")?.GetValue(profile, null) ?? 0;
    var posts = profile?.GetType().GetProperty("Posts")?.GetValue(profile, null) as List<string> ?? new List<string>();
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .profile-container {
        flex: 1;
        padding: 40px 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .profile-header {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 50px;
        margin-bottom: 20px;
        flex-wrap: wrap;
    }

    .profile-header img {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        object-fit: cover;
    }

    .profile-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .profile-info h2 {
        font-weight: 600;
        margin-bottom: 10px;
    }

    .bio {
        color: #555;
        font-size: 15px;
        margin-bottom: 15px;
        max-width: 400px;
        line-height: 1.5;
        text-align: center;
        white-space: pre-line;
    }

    .posts-count {
        font-weight: 500;
        color: #333;
        margin-bottom: 10px;
    }

    .edit-profile-btn {
        margin-bottom: 20px;
    }

    .posts-section {
        width: 100%;
        max-width: 900px;
    }

    .posts-title {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        margin-bottom: 25px;
        font-weight: 600;
        font-size: 17px;
        border-top: 1px solid #dbdbdb;
        padding-top: 20px;
    }

    .posts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 10px;
    }

    .posts-grid img {
        width: 100%;
        aspect-ratio: 1/1;
        object-fit: cover;
        border-radius: 4px;
        cursor: pointer;
    }

    @@media(max-width: 768px) {
        .profile-container {
            @* optional mobile padding *@
        }

        .profile-header {
            flex-direction: column;
        }

        .posts-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .edit-profile-btn {
        background-color: #000;

        color: #fff;
        margin-left: 8px;
        padding: 4px 30px;

        font-weight: 600;
        border-radius: 6px;
        text-decoration: none;
        display: inline-block;
        margin-bottom: 20px;
        transition: background-color 0.2s;
    }

    .edit-profile-btn:hover {
        background-color: #333;
        color: #fff;
    }
</style>

<div class="profile-container">
    <div class="profile-header">
        <img src="~/images/profile.png" alt="Profile Photo" />
        <div class="profile-info">
            <h2>@username</h2>
            <p class="bio">@bio</p>
            <p class="posts-count">@postsCount Posts</p>

            <a href="@Url.Action("DeleteUser", "AdminHome")" class="btn edit-profile-btn">
                Delete User
            </a>

        </div>
    </div>

    <div class="posts-section">
        <div class="posts-title">
            <i class="bi bi-grid-3x3"></i> Posts
        </div>

        <div class="posts-grid">
            @foreach (var post in posts)
            {
                <img src="@Url.Content(post)" alt="Post Image" />
            }
        </div>
    </div>
</div>