<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Socio Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)

    <style>
        body {
            background-color: #fff;
            margin: 0;
            display: flex;
            flex-direction: row;
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        }

        /* === Desktop Sidebar === */
        .sidebar {
            width: 250px;
            background-color: #fff;
            border-right: 1px solid #dbdbdb;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 20px 15px;
            position: fixed;
            height: 100vh;
            z-index: 100;
        }

        .sidebar img.logo {
            width: 120px;
            align-self: center;
            margin: 20px 0;
            cursor: pointer;
        }

        .sidebar .nav-links {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .sidebar .nav-links a {
            text-decoration: none;
            color: #262626;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 17px;
            padding: 8px 10px;
            border-radius: 8px;
            transition: background-color 0.2s, padding-left 0.2s;
        }

        .sidebar .nav-links a:hover {
            background-color: #f1f1f1;
            padding-left: 15px;
        }

        .main-content {
            margin-left: 250px;
            flex: 1;
            padding: 20px;
            transition: margin 0.3s ease;
        }

        .mobile-topbar {
            display: none;
        }

        .bottom-navbar {
            display: none;
        }

        @@media (max-width: 768px) {
            body {
                flex-direction: column;
            }

            .sidebar {
                display: none;
            }

            /* Full-width fixed topbar */
            .mobile-topbar {
                display: flex;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 60px;
                background-color: #fff;
                border-bottom: 1px solid #dbdbdb;
                justify-content: space-between;
                align-items: center;
                padding: 0 15px;
                z-index: 1000;
            }

            .mobile-topbar img {
                height: 35px;
            }

            .mobile-topbar button {
                border: none;
                background: none;
                color: #262626;
                font-size: 18px;
            }

            .mobile-topbar button:hover {
                color: #000;
            }

            /* Adjust main content padding under fixed topbar and above bottom navbar */
            .main-content {
                margin-left: 0;
                margin-top: 65px;
                margin-bottom: 70px;
                padding: 15px;
            }

            /* Fixed bottom navbar */
            .bottom-navbar {
                display: flex;
                position: fixed;
                bottom: 0;
                left: 0;
                width: 100%;
                background-color: #fff;
                border-top: 1px solid #dbdbdb;
                justify-content: space-around;
                align-items: center;
                padding: 8px 0;
                z-index: 1000;
            }

            .bottom-navbar a {
                color: #262626;
                font-size: 24px;
                text-decoration: none;
            }

            .bottom-navbar a:hover {
                color: #000;
            }
        }
    </style>
</head>

<body>

    <div class="sidebar d-none d-md-flex flex-column">
        <div>
            <a href="@Url.Action("Index", "AdminHome")">
                <img src="~/images/landing-logo-img.png" alt="Logo" class="logo" />
            </a>
            <div class="nav-links">
                <a asp-controller="AdminHome" asp-action="Index"><i class="bi bi-house-fill"></i> Dashboard</a>
                <a asp-controller="AdminHome" asp-action="AllUsers"><i class="bi bi-people-fill"></i> All Users</a>
                <a asp-controller="AdminHome" asp-action="Search"><i class="bi bi-search"></i> Search </a>

            </div>
        </div>
        <div class="nav-links mt-3">
            <a asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
        </div>
    </div>

    <div class="mobile-topbar d-flex d-md-none">
        <a href="@Url.Action("Index", "AdminHome")">
            <img src="~/images/landing-logo-img.png" alt="Logo" />
        </a>
        <button type="button" onclick="window.location.href='@Url.Action("Logout", "Account")'">
            <i class="bi bi-box-arrow-right"></i>
        </button>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

    <div class="bottom-navbar d-flex d-md-none">
        <a asp-controller="AdminHome" asp-action="Index"><i class="bi bi-house-fill"></i></a>
        <a asp-controller="AdminHome" asp-action="AllUsers"><i class="bi bi-people-fill"></i></a>
        <a asp-controller="AdminHome" asp-action="Search"><i class="bi bi-search"></i> </a>

    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>