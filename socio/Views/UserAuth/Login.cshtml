@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Socio Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #ffffff;
        }
        .login-card {
            width: 950px;
            max-width: 95%;
            display: flex;
            background-color: #ffffff;
        }
        .login-image {
            flex: 1.5;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .login-image img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }
        .login-form {
            flex: 1;
            padding: 50px 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .login-form input {
            margin-bottom: 15px;
            background-color: #fafafa;
            border: 1px solid #dbdbdb;
            height: 35px;
            font-size: 16px;
            padding: 0 15px;
        }
        .login-form .btn {
            background-color: #0095f6;
            color: #fff;
            height: 40px;
            font-size: 16px;
            margin-top: 10px;
        }
        .text-end a {
            font-size: 14px;
            text-decoration: none;
        }
        .or-divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 15px 0;
        }
        .or-divider::before, .or-divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #dbdbdb;
        }
        .or-divider::before { margin-right: 10px; }
        .or-divider::after { margin-left: 10px; }
        .signup-text {
            text-align: center;
            margin-top: 10px;
            font-size: 14px;
        }
        .signup-text a {
            text-decoration: none;
            color: #0095f6;
        }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="login-image d-none d-md-flex">
            <img src="@Url.Content("~/images/landing-page-img.png")" alt="Login Image">
        </div>

        <div class="login-form">
            <div class="text-center mb-3">
                <img src="@Url.Content("~/images/landing-logo-img.png")" alt="Socio Logo" style="height:60px; width:auto;">
            </div>

            <form method="post">
                <input type="text" name="username" class="form-control" placeholder="Username" required>
                <input type="password" name="password" class="form-control" placeholder="Password" required>

                <div class="text-end mb-3">
                    <a asp-action="ForgotPassword" asp-controller="UserAuth">Forgot password?</a>
                </div>

                <button type="submit" class="btn w-100">Log In</button>

                <div class="or-divider" style="margin-top:30px;">OR</div>

                @if (ViewBag.Message != null)
                {
                    <div class="text-danger text-center mt-2">@ViewBag.Message</div>
                }
            </form>

            <div class="signup-text">
                Don't have an account? <a asp-action="SignUp" asp-controller="UserAuth" >Sign Up</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
